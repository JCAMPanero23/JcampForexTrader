<Window x:Class="JcampForexTrader.ExportOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Trade History" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Export Options" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Export Options -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Date Range Section -->
                <Border Background="#252526" 
                        BorderBrush="#3E3E42" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Date Range" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Start Date:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,10"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" 
                                        x:Name="StartDatePicker" 
                                        Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="End Date:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>
                            <DatePicker Grid.Row="1" Grid.Column="1" 
                                        x:Name="EndDatePicker"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Symbol Filter Section -->
                <Border Background="#252526" 
                        BorderBrush="#3E3E42" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Symbol Filter" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <ComboBox x:Name="SymbolComboBox" 
                                  Height="30">
                            <!-- Items will be added in code-behind -->
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Strategy Filter Section -->
                <Border Background="#252526" 
                        BorderBrush="#3E3E42" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15">
                    <StackPanel>
                        <TextBlock Text="Strategy Filter" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <ComboBox x:Name="StrategyComboBox" 
                                  Height="30">
                            <!-- Items will be added in code-behind -->
                        </ComboBox>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Export" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#4CAF50" 
                    Foreground="White" 
                    BorderBrush="Transparent"
                    Click="ExportButton_Click"/>
            <Button Content="Cancel" 
                    Width="100" 
                    Height="35"
                    Background="#757575" 
                    Foreground="White" 
                    BorderBrush="Transparent"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="JcampForexTrader.BacktestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Python Backtest Engine"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="White">

    <Window.Resources>
        <!-- AGGRESSIVE Calendar Fix: Override system colors -->
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="White"/>

        <!-- Calendar Day Button - Force white text with MinWidth for visibility -->
        <Style TargetType="{x:Type CalendarDayButton}">
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarDayButton}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Margin="1">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="White"
                                TextElement.FontWeight="{TemplateBinding FontWeight}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0063B1"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsToday" Value="True">
                                <Setter Property="BorderBrush" Value="#FFFF00"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsInactive" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Calendar Button (Month/Year navigation) - Force white text -->
        <Style TargetType="{x:Type CalendarButton}">
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CalendarButton}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Margin="1">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Calendar Style - Dark theme with forced white text -->
        <Style TargetType="Calendar">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
        </Style>

        <!-- DatePickerTextBox Style -->
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
        </Style>

        <!-- ToggleButton for ComboBox (fixes selected item background) -->
        <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="{TemplateBinding Background}"/>
                                <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Fill="White"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Dark Theme Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="0" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource ComboBoxToggleButton}"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="5,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <ContentPresenter.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </ContentPresenter.Resources>
                            </ContentPresenter>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#2D2D30" BorderThickness="1" BorderBrush="#3E3E42"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Dark Theme Style - Force consistent styling -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                TextElement.Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover state -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <!-- Selected state (in dropdown) -->
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <!-- Selected item (showing in ComboBox) -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D2D30"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Dark Theme -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- TabItem Dark Theme - Force white text -->
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1,1,1,0"
                                Margin="0,0,2,0"
                                CornerRadius="3,3,0,0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            Margin="10,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Selected tab -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Panel.ZIndex" Value="100"/>
                            </Trigger>
                            <!-- Hover state -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Dark Theme -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                TextElement.Foreground="White"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover state -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <!-- Pressed state -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#004578"/>
                            </Trigger>
                            <!-- Disabled state -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Dark Theme -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3E3E42"/>
            <Setter Property="VerticalGridLinesBrush" Value="#3E3E42"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#3E3E42"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="BorderBrush" Value="#3E3E42"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Padding" Value="5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Configuration Panel -->
        <GroupBox Grid.Row="0" Header="Backtest Configuration" Margin="0,0,0,15"
                  BorderBrush="#3E3E42" BorderThickness="1" Foreground="White">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: Pairs (Multi-Select) and Strategy -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Pairs (select 1+):" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <Grid Grid.Row="0" Grid.Column="1" Margin="10,5,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Column 1 -->
                    <CheckBox Grid.Row="0" Grid.Column="0" x:Name="EurusdCheckbox" Content="EURUSD_sml" IsChecked="True" Foreground="White" Margin="0,3" FontSize="14"/>
                    <CheckBox Grid.Row="1" Grid.Column="0" x:Name="GbpusdCheckbox" Content="GBPUSD_sml" Foreground="White" Margin="0,2" FontSize="14"/>
                    <CheckBox Grid.Row="2" Grid.Column="0" x:Name="UsdjpyCheckbox" Content="USDJPY_sml" Foreground="White" Margin="0,2" FontSize="14"/>
                    <!-- Column 2 -->
                    <CheckBox Grid.Row="0" Grid.Column="1" x:Name="AudusdCheckbox" Content="AUDUSD_sml" Foreground="White" Margin="0,2" FontSize="14" Checked="AudusdCheckbox_Checked"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" x:Name="UsdcadCheckbox" Content="USDCAD_sml" Foreground="White" Margin="0,2" FontSize="14"/>
                    <CheckBox Grid.Row="2" Grid.Column="1" x:Name="NzdusdCheckbox" Content="NZDUSD_sml" Foreground="White" Margin="0,2" FontSize="14"/>
                </Grid>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="Strategy:" VerticalAlignment="Top" Margin="0,48,0,0" FontSize="16" Foreground="White"/>
                <ComboBox Grid.Row="0" Grid.Column="4" x:Name="StrategyComboBox" Margin="0,48,0,8" FontSize="14"
                          Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42">
                    <ComboBoxItem Content="both" IsSelected="True" Background="#2D2D30" Foreground="White"/>
                    <ComboBoxItem Content="trend_rider" Background="#2D2D30" Foreground="White"/>
                    <ComboBoxItem Content="range_rider" Background="#2D2D30" Foreground="White"/>
                </ComboBox>

                <!-- Row 1: Date Range -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Date:" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <DatePicker Grid.Row="1" Grid.Column="1" x:Name="StartDatePicker" Margin="0,5" FontSize="14"
                           Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42"/>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="End Date:" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <DatePicker Grid.Row="1" Grid.Column="4" x:Name="EndDatePicker" Margin="0,5" FontSize="14"
                           Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42"/>

                <!-- Row 2: Risk Parameters -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Initial Balance:" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="InitialBalanceTextBox" Text="10000" Margin="0,5" FontSize="14"
                        Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" Padding="5"/>

                <TextBlock Grid.Row="2" Grid.Column="3" Text="Risk Per Trade (%):" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <TextBox Grid.Row="2" Grid.Column="4" x:Name="RiskPercentTextBox" Text="2.0" Margin="0,5" FontSize="14"
                        Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" Padding="5"/>

                <!-- Row 3: Max Positions and Action Button -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Positions:" VerticalAlignment="Center" Margin="0,5" FontSize="16" Foreground="White"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="MaxPositionsTextBox" Text="2" Margin="0,5" FontSize="14"
                        Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" Padding="5"/>

                <Button Grid.Row="3" Grid.Column="4" x:Name="RunBacktestButton" Content="Run Backtest"
                        Height="35" Margin="0,5" Click="RunBacktestButton_Click"
                        Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                        FontWeight="Bold" FontSize="14" Cursor="Hand"/>
            </Grid>
        </GroupBox>

        <!-- Results Panel -->
        <TabControl Grid.Row="1" x:Name="ResultsTabControl"
                    Background="#1E1E1E" BorderBrush="#3E3E42">

            <!-- Progress Tab -->
            <TabItem Header="Progress" Background="#2D2D30" Foreground="White">
                <Grid Margin="15">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock x:Name="StatusTextBlock" Text="Ready to run backtest"
                                  FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"
                                  Foreground="White"/>

                        <ProgressBar x:Name="ProgressBar" Height="25" Width="400"
                                    Minimum="0" Maximum="100" Value="0"
                                    Background="#2D2D30" Foreground="#007ACC" BorderBrush="#3E3E42"/>

                        <TextBlock x:Name="ProgressTextBlock" Text="0%"
                                  FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"
                                  Foreground="#CCCCCC"/>

                        <Button x:Name="ViewChartButton" Content="View Chart Playback"
                               Width="200" Height="40" Margin="0,30,0,0"
                               Background="#007ACC" Foreground="White" BorderBrush="#007ACC"
                               FontWeight="Bold" FontSize="14" Cursor="Hand"
                               Click="ViewChartButton_Click"
                               IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Summary Tab -->
            <TabItem Header="Summary" Background="#2D2D30" Foreground="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Performance Metrics -->
                        <GroupBox Grid.Row="0" Header="Performance Metrics" Margin="0,0,0,15"
                                 BorderBrush="#3E3E42" BorderThickness="1" Foreground="White">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Column 1 -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Total Trades: " FontWeight="Bold"/>
                                    <Run x:Name="TotalTradesText" Text="0" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Win Rate: " FontWeight="Bold"/>
                                    <Run x:Name="WinRateText" Text="0%" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Total R: " FontWeight="Bold"/>
                                    <Run x:Name="TotalRText" Text="0.00" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="0" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Avg R: " FontWeight="Bold"/>
                                    <Run x:Name="AvgRText" Text="0.00" Foreground="#007ACC"/>
                                </TextBlock>

                                <!-- Column 2 -->
                                <TextBlock Grid.Row="0" Grid.Column="1" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Net Profit: " FontWeight="Bold"/>
                                    <Run x:Name="NetProfitText" Text="$0.00" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="1" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Return %: " FontWeight="Bold"/>
                                    <Run x:Name="ReturnPctText" Text="0.00%" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="1" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Profit Factor: " FontWeight="Bold"/>
                                    <Run x:Name="ProfitFactorText" Text="0.00" Foreground="#007ACC"/>
                                </TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="1" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Sharpe Ratio: " FontWeight="Bold"/>
                                    <Run x:Name="SharpeRatioText" Text="0.00" Foreground="#007ACC"/>
                                </TextBlock>

                                <!-- Column 3 -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Max Drawdown: " FontWeight="Bold"/>
                                    <Run x:Name="MaxDrawdownText" Text="0.00%" Foreground="#FF4444"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="2" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Max DD $: " FontWeight="Bold"/>
                                    <Run x:Name="MaxDrawdownDollarsText" Text="$0.00" Foreground="#FF4444"/>
                                </TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="2" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Max Wins: " FontWeight="Bold"/>
                                    <Run x:Name="MaxConsecutiveWinsText" Text="0" Foreground="#00AA00"/>
                                </TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="2" Margin="5" FontSize="16" Foreground="White">
                                    <Run Text="Max Losses: " FontWeight="Bold"/>
                                    <Run x:Name="MaxConsecutiveLossesText" Text="0" Foreground="#FF4444"/>
                                </TextBlock>
                            </Grid>
                        </GroupBox>

                        <!-- Strategy Breakdown -->
                        <GroupBox Grid.Row="1" Header="Strategy Breakdown" Margin="0,0,0,15"
                                 BorderBrush="#3E3E42" BorderThickness="1" Foreground="White">
                            <StackPanel Margin="10">
                                <TextBlock x:Name="TrendRiderBreakdownText" Text="Trend Rider: N/A" Margin="5" Foreground="#CCCCCC"/>
                                <TextBlock x:Name="RangeRiderBreakdownText" Text="Range Rider: N/A" Margin="5" Foreground="#CCCCCC"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Trades Tab -->
            <TabItem Header="Trades" Background="#2D2D30" Foreground="White">
                <DataGrid x:Name="TradesDataGrid"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         Background="#2D2D30"
                         Foreground="White"
                         RowBackground="#2D2D30"
                         AlternatingRowBackground="#252526"
                         BorderBrush="#3E3E42"
                         GridLinesVisibility="Horizontal"
                         HorizontalGridLinesBrush="#3E3E42">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding PositionId}" Width="50"/>
                        <DataGridTextColumn Header="Strategy" Binding="{Binding Strategy}" Width="120"/>
                        <DataGridTextColumn Header="Side" Binding="{Binding Side}" Width="60"/>
                        <DataGridTextColumn Header="Entry Time" Binding="{Binding EntryTime}" Width="140"/>
                        <DataGridTextColumn Header="Exit Time" Binding="{Binding ExitTime}" Width="140"/>
                        <DataGridTextColumn Header="Entry" Binding="{Binding EntryPrice, StringFormat=F5}" Width="80"/>
                        <DataGridTextColumn Header="Exit" Binding="{Binding ExitPrice, StringFormat=F5}" Width="80"/>
                        <DataGridTextColumn Header="R-Multiple" Binding="{Binding RMultiple, StringFormat=F2}" Width="90"/>
                        <DataGridTextColumn Header="P/L $" Binding="{Binding ProfitLoss, StringFormat=F2}" Width="90"/>
                        <DataGridTextColumn Header="Exit Reason" Binding="{Binding ExitReason}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Equity Curve Tab -->
            <TabItem Header="Equity Curve" Background="#2D2D30" Foreground="White">
                <Grid Margin="15">
